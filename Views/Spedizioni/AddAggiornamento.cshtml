@model EpiDHL.Models.Aggiornamento
@{
    ViewBag.Title = "Aggiungi Stato Spedizione";
}

<h2>Aggiungi Stato Spedizione</h2>

@using (Html.BeginForm("AddAggiornamento", "Spedizioni", FormMethod.Post, new { novalidate = "true" }))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.LabelFor(model => model.Stato, new { @class = "form-label" })
        @Html.EditorFor(model => model.Stato, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Username") ? "" : "is-invalid")}" } })
        @Html.ValidationMessageFor(model => model.Stato, null, new { @class = "invalid-feedback" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Luogo, new { @class = "form-label" })
        @Html.EditorFor(model => model.Luogo, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Password") ? "" : "is-invalid")}" } })
        @Html.ValidationMessageFor(model => model.Luogo, null, new { @class = "invalid-feedback" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Descrizione, new { @class = "form-label" })
        @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Password") ? "" : "is-invalid")}" } })
        @Html.ValidationMessageFor(model => model.Descrizione, null, new { @class = "invalid-feedback" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Data_Agg, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Data_Agg, new { htmlAttributes = new { @class = $"form-control {(ViewData.ModelState.IsValidField("Password") ? "" : "is-invalid")}" } })
        @Html.ValidationMessageFor(model => model.Data_Agg, null, new { @class = "invalid-feedback" })
    </div>
    <div class="mb-3">
        @Html.HiddenFor(model => model.Spedizione_ID, new { @Value = ViewBag.id })
    </div>
    <button type="submit" class="btn btn-primary">Aggiungi stato</button>
}
