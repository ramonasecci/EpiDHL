    @Html.ValidationMessageFor(model => model.Spedizione1.Cod_Sped, null, new { @class = "invalid-feedback" })
</div>
<div class="m-2">
    @Html.LabelFor(model => model.Cliente1.Cod_Fisc, new { @class = "form-label" })
