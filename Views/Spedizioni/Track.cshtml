@model EpiDHL.Models.ModelComb
@{
    ViewBag.Title = "Track";
}

<h2>Track</h2>


<h3>Verifica lo stato della spedizione</h3>
<div>
    @using (Html.BeginForm("Track", "Spedizioni", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        if (TempData["ErrorMex"] != null)
        {
            <div class="alert alert-danger">
                I dati di accesso sono errati
            </div>
        }

<div class="m-2">
    @Html.LabelFor(model => model.Spedizione1.Cod_Sped, new { @class = "form-label" })
